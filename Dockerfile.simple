# Dockerfile simplificado - Alternativa m치s simple
FROM python:3.12-slim

# Instalar Node.js
RUN apt-get update && apt-get install -y curl && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Instalar dependencias Python
COPY backend/requirements.txt backend/requirements.txt
RUN pip install --no-cache-dir -r backend/requirements.txt

# Instalar dependencias Node y construir frontend
COPY frontend/package*.json frontend/
WORKDIR /app/frontend
RUN npm ci && npm run build

# Copiar c칩digo
WORKDIR /app
COPY . .

# Variables de entorno
ENV PYTHONUNBUFFERED=1
ENV FLASK_ENV=production

# Ejecutar desde backend
WORKDIR /app/backend

# Comando simple - Railway expandir치 $PORT autom치ticamente
CMD gunicorn wsgi:app --bind 0.0.0.0:${PORT} --workers 2 --timeout 120

